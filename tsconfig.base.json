{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom", "ESNext.AsyncIterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@devchirps/api-interface": ["libs/api-interface/src/index.ts"],
      "@devchirps/authorization": ["libs/authorization/src/index.ts"],
      "@devchirps/graphql": ["libs/graphql/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
